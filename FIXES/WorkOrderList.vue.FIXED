<template>
  <div class="work-order-list">
    <h1>Work Orders</h1>
    
    <!-- Loading state -->
    <div v-if="loading" class="loading-state">
      <div class="spinner"></div>
      <p>Loading work orders...</p>
    </div>

    <!-- Error state -->
    <div v-else-if="error" class="error-state">
      <p class="error-message">‚ùå Failed to load work orders</p>
      <p class="error-details">{{ error.message }}</p>
      <button @click="fetchWorkOrders" class="retry-button">Retry</button>
    </div>

    <!-- Empty state -->
    <div v-else-if="workOrders.length === 0" class="empty-state">
      <p>üìã No work orders found</p>
      <p class="empty-hint">Work orders will appear here once created</p>
    </div>

    <!-- Table of work orders -->
    <div v-else>
      <table>
        <thead>
          <tr>
            <th>ID</th>
            <th>Customer</th>
            <th>Vehicle</th>
            <th>Status</th>
            <th>Created</th>
          </tr>
        </thead>
        <tbody>
          <tr v-for="order in workOrders" :key="order.id">
            <!-- Clickable ID links to detail page -->
            <td>
              <router-link :to="`/work-orders/${order.id}`">
                {{ order.id }}
              </router-link>
            </td>
            <!-- Display raw fields for now; you can replace IDs with names once you join tables -->
            <td>{{ order.customer_id }}</td>
            <td>{{ order.vehicle_id }}</td>
            <td>
              <span :class="getStatusClass(order.status)">
                {{ order.status }}
              </span>
            </td>
            <td>{{ new Date(order.created_at).toLocaleString() }}</td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
</template>

<script setup>
import { ref, onMounted, onUnmounted } from 'vue'
import { supabase } from '@/supabaseClient.js' // FIXED: Use standard client

// reactive state
const workOrders = ref([])
const loading = ref(true)
const error = ref(null)

// Helper function for status styling
const getStatusClass = (status) => {
  const classes = {
    'draft': 'status-draft',
    'in_progress': 'status-in-progress',
    'completed': 'status-completed'
  }
  return classes[status] || 'status-default'
}

// fetch data from Supabase with proper error handling
const fetchWorkOrders = async () => {
  loading.value = true
  error.value = null
  
  try {
    console.log('üîÑ Fetching work orders...')
    
    const { data, error: fetchError } = await supabase
      .from('work_orders')
      .select('*')
      .order('created_at', { ascending: false })

    if (fetchError) {
      console.error('‚ùå Error fetching work orders:', fetchError)
      throw fetchError
    }
    
    console.log('‚úÖ Work orders fetched:', data?.length || 0, 'items')
    workOrders.value = data || []
  } catch (err) {
    console.error('‚ùå Unexpected error in fetchWorkOrders:', err)
    error.value = err
    workOrders.value = []
  } finally {
    loading.value = false
  }
}

// run on component mount
onMounted(() => {
  console.log('üöÄ WorkOrderList component mounted')
  fetchWorkOrders()
})

onUnmounted(() => {
  console.log('üëã WorkOrderList component unmounted')
})
</script>

